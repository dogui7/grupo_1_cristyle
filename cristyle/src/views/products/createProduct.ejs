<!DOCTYPE html>

<%-include ("../partials/head", {particularCSS: cssSheets}, {title: title}) %>

<body>

    <%- include("../partials/header") %>

    <main>
        <div class="container products-wrapper">
            <div>
                <div >
                    <h2 class="products-title">Formulario de creación de productos</h2>
                </div>
            </div>
            <div class="form-padding">
                <div  class="form-create">
                    <form id="form-create" action="/productos/agregar" method="POST" enctype="multipart/form-data">
                        <div>
                            <div class="flex-desktop">
                                <div class="first-flex">

                                    <div class="form-class">
                                        <label for="name" class="form-label">Nombre del producto:</label>
                                        <br>
                                        <input type="text" id="name" name="name" placeholder="Ej: Vestido Superfashon " class="form-input"
                                        <% if (locals.oldData && oldData.name) { %>
                                            value="<%= oldData.name %>" 
                                        <% } %>
                                        >
                                    </div>
                                    <% if (locals.errorMessages && errorMessages.name) { %>
                                        <p class="error"> <%= errorMessages.name.msg %> </p>
                                    <% } %>
                                    <p id="nameErrorJs"> </p>

                                    <div class="form-class">
                                        <label for="price" class="form-label">Precio del producto:</label>
                                        <br>
                                        <input type="text" id="price" name="price" placeholder="Ej:4562" class="form-input"
                                        <% if (locals.oldData && oldData.price) { %>
                                            value="<%= oldData.price %>" 
                                        <% } %>
                                        >
                                    </div>
                                    <% if (locals.errorMessages && errorMessages.price) { %>
                                        <p class="error"> <%= errorMessages.price.msg %> </p>
                                    <% } %>

                                    <div class="form-class">
                                        <label for="discount" class="form-label">Descuento:</label>
                                        <br>
                                        <input type="text" id="discount" name="discount" placeholder="Ej: 10" class="form-input"
                                        <% if (locals.oldData && oldData.discount) { %>
                                            value="<%= oldData.discount %>" 
                                        <% } %>
                                        >
                                    </div>
                                    <% if (locals.errorMessages && errorMessages.discount) { %>
                                        <p class="error"> <%= errorMessages.discount.msg %> </p>
                                    <% } %>
                                </div>

                                <div class="second-flex">    
                                    <div class="form-class">
                                        <label for="category" class="form-label">Categoría:</label>
                                        <br>
                                        <select name="categoryId" id="category" class="form-input">
                                            <option value="">Elegí</option>
                                            <% for (let i = 0; i < categories.length; i++) { %>
                                                <option value="<%= categories[i].id %>" >
                                                    <%= categories[i].category %>
                                                </option>
                                        <% } %>
                                        </select>
                                    </div>
                                    <% if (locals.errorMessages && errorMessages.category) { %>
                                        <p class="error"> <%= errorMessages.category.msg %> </p>
                                    <% } %>

                                    <div class="form-class">
                                        <label for="size" class="form-label">Talle:</label>
                                        <br>
                                        <select name="sizeId" id="size" class="form-input">
                                            <option value="">Elegí</option>
                                            <% for (let i = 0; i < sizes.length; i++) { %>
                                                    <option value="<%= sizes[i].id %>">
                                                        <%= sizes[i].size %>
                                                    </option>
                                            <% } %>

                                        </select>
                                    </div>
                                    <% if (locals.errorMessages && errorMessages.size) { %>
                                        <p class="error"> <%= errorMessages.size.msg %> </p>
                                    <% } %>

                                    <div class="form-class">
                                        <label for="image" class="form-label">Insertar Imagen:</label>
                                        <br>
                                        <input type="file" id="image" class="form-image" name="image">        
                                    </div>
                                    <% if (locals.errorMessages && errorMessages.image) { %>
                                        <p class="error"> <%= errorMessages.image.msg %> </p>
                                    <% } %>
                                    <p id="imageErrorJs"> </p>

                                </div>
                            </div>

                            <div id="gender">
                                <label for="gender">Selecciona el género: </label><br>
                                <input type="radio" id="male" name="gender" value="hombre"
                                    <% if (locals.oldData && oldData.gender === "hombre") { %>
                                        checked
                                    <% } %>
                                > Hombre <br>
                                <input type="radio" id="female" name="gender" value="mujer"
                                    <% if (locals.oldData && oldData.gender === "mujer") { %>
                                        checked
                                    <% } %>
                                > Mujer <br>    
                            </div>
                            <% if (locals.errorMessages && errorMessages.gender) { %>
                                <p class="error"> <%= errorMessages.gender.msg %> </p>
                            <% } %>

                            <div class="form-class">
                                <label for="description" class="form-label">Descripción:</label>
                                <br>
                                <!-- La siguiente linea NO DEBE ser alterada, debe permanecer en una sola linea -->
                                <textarea name="description" id="description" class="description"><% if (locals.oldData && oldData.description) { %><%= oldData.description %><% } %></textarea>
                            </div>
                            <% if (locals.errorMessages && errorMessages.description) { %>
                                <p class="error"> <%= errorMessages.description.msg %> </p>
                            <% } %>
                            <p id="descriptionErrorJs"> </p>

                            <div class="form-class" id="buy-now-div">
                                <button type="submit" class="buy-now-button">Guardar producto</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <%- include("../partials/footer") %>
    <script src="/js/validationCreateProducts.js" type="text/javascript"></script>
</body>
<script src="https://kit.fontawesome.com/613ba21445.js" crossorigin="anonymous"></script>
</html>