<!DOCTYPE html>

<%-include ("../partials/head", {particularCSS: cssSheets}, {title: title}) %>

<body>
    
    <%- include("../partials/header") %>

    <main>
        <section id="main">
            <section id="formulario">

                <h2 id="titulo">REGISTRO</h2>

                <form action="/usuarios/registrarse" method="POST" enctype="multipart/form-data">

                    <div class="campo-texto">
                        <input type="text" name="firstName" placeholder="Nombre" required
                        <% if (locals.oldData && oldData.firstName) { %>
                            value="<%= oldData.firstName %>" 
                        <% } %>
                        >
                    </div>

                    <div class="campo-texto">
                        <input type="text" name="lastName" placeholder="Apellido" required
                        <% if (locals.oldData && oldData.lastName) { %>
                            value="<%= oldData.lastName %>" 
                        <% } %>
                        >
                    </div>

                    <input type="radio" name="category" value="2" 
                    <% if (!locals.oldData || (locals.oldData && (!oldData.category || oldData.category === "2"))) { %>
                        checked
                    <% } %>
                    > Cliente <br>
                    <input type="radio" name="category" value="1"
                    <% if (locals.oldData && oldData.category === "1") { %>
                        checked
                    <% } %>
                    > Admin

                    <div class="campo-texto">
                        <input type="email" name="email" placeholder="Correo electrónico" required
                        <% if (locals.oldData && oldData.email) { %>
                            value="<%= oldData.email %>" 
                        <% } %>
                        >
                    </div>

                    <div class="campo-texto" id="contraseña">
                        <input type="password" name="password" placeholder="Contraseña" required minlength="8">
                    </div>

                    <label for="date" id="fecha-nacimiento">Fecha de nacimiento</label>
                    <div class="campo-texto" id="date">
                        <input type="date" name="birthdate" id="date" required
                        <% if (locals.oldData && oldData.birthdate) { %>
                            value="<%= oldData.birthdate %>" 
                        <% } %>
                        >
                    </div>

                    <label class= "label" for="image">Elige tu foto de perfil</label>
                    <input class= "label" type="file" name="userImage" required>

                    <div id="terminos-condiciones">
                        <input type="checkbox" name="terminos_condiciones" value="true" id="terminos" checked required>
                        <label for="terminos">Acepto los términos y condiciones</label>
                    </div>

                    <div class="boton" id="registrarme">
                        <button type="submit">REGISTRARME</button>
                    </div>
                </form>
            </section>
        </section>
    </main>

    <%- include("../partials/footer") %>

</body>
<script src="https://kit.fontawesome.com/613ba21445.js" crossorigin="anonymous"></script>
</html>